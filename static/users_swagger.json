    "/users/stats": {
      "get": {
        "tags": ["users"],
        "summary": "Get user statistics",
        "description": "Get statistical information about users",
        "security": [{"bearerAuth": []}],
        "responses": {
          "200": {
            "description": "User statistics",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "object",
                      "properties": {
                        "total_users": {
                          "type": "integer"
                        },
                        "active_users": {
                          "type": "integer"
                        },
                        "inactive_users": {
                          "type": "integer"
                        },
                        "suspended_users": {
                          "type": "integer"
                        },
                        "recent_registrations": {
                          "type": "integer"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/users/activity": {
      "get": {
        "tags": ["users"],
        "summary": "Get user activity",
        "description": "Get user activity data for charting",
        "security": [{"bearerAuth": []}],
        "parameters": [
          {
            "in": "query",
            "name": "start_date",
            "schema": {
              "type": "string",
              "format": "date-time"
            },
            "description": "Start date for activity data"
          },
          {
            "in": "query",
            "name": "end_date",
            "schema": {
              "type": "string",
              "format": "date-time"
            },
            "description": "End date for activity data"
          }
        ],
        "responses": {
          "200": {
            "description": "User activity data",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/UserActivity"
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/users/profile/uuid/{user_uuid}": {
      "get": {
        "tags": ["users"],
        "summary": "Get user profile",
        "description": "Get a detailed user profile by UUID with favorites data",
        "security": [{"bearerAuth": []}],
        "parameters": [
          {
            "in": "path",
            "name": "user_uuid",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "UUID of the user to retrieve profile for"
          }
        ],
        "responses": {
          "200": {
            "description": "User profile details",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "object",
                      "properties": {
                        "user": {
                          "$ref": "#/components/schemas/User"
                        },
                        "subscription": {
                          "$ref": "#/components/schemas/UserSubscription"
                        },
                        "favorite_sports": {
                          "type": "array",
                          "items": {
                            "$ref": "#/components/schemas/Sport"
                          }
                        },
                        "favorite_teams": {
                          "type": "array",
                          "items": {
                            "$ref": "#/components/schemas/Team"
                          }
                        },
                        "favorite_players": {
                          "type": "array",
                          "items": {
                            "$ref": "#/components/schemas/Player"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "User not found"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/users/profile/uuid/{user_uuid}/update-favorites": {
      "put": {
        "tags": ["users"],
        "summary": "Update user favorites",
        "description": "Update a user's favorite sports, teams, and players",
        "security": [{"bearerAuth": []}],
        "parameters": [
          {
            "in": "path",
            "name": "user_uuid",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "UUID of the user to update favorites for"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "favorite_sports": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  },
                  "favorite_teams": {
                    "type": "array",
                    "items": {
                      "type": "integer"
                    }
                  },
                  "favorite_players": {
                    "type": "array",
                    "items": {
                      "type": "integer"
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User favorites updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "$ref": "#/components/schemas/User"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "User not found"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/users/profile/uuid/{user_uuid}/restrict": {
      "post": {
        "tags": ["users"],
        "summary": "Restrict user",
        "description": "Restrict a user by changing their status to 'suspended'",
        "security": [{"bearerAuth": []}],
        "parameters": [
          {
            "in": "path",
            "name": "user_uuid",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "UUID of the user to restrict"
          }
        ],
        "responses": {
          "200": {
            "description": "User restricted successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    },
                    "user": {
                      "$ref": "#/components/schemas/User"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "User not found"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "uuid": {
            "type": "string"
          },
          "email": {
            "type": "string",
            "format": "email"
          },
          "username": {
            "type": "string"
          },
          "full_name": {
            "type": "string"
          },
          "profile_image": {
            "type": "string",
            "format": "uri"
          },
          "registration_date": {
            "type": "string",
            "format": "date-time"
          },
          "last_login": {
            "type": "string",
            "format": "date-time"
          },
          "status": {
            "type": "string",
            "enum": ["active", "inactive", "suspended"]
          },
          "favorite_sports": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "favorite_teams": {
            "type": "array",
            "items": {
              "type": "integer"
            }
          },
          "favorite_players": {
            "type": "array",
            "items": {
              "type": "integer"
            }
          }
        }
      },
      "UserActivity": {
        "type": "object",
